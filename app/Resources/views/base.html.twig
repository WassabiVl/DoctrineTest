<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}" />
        <script src=" {{ asset('js/bootstrap.js') }} " ></script>
        <script src=" {{ asset('js/main.js') }} " ></script>
        <script src=" {{ asset('js/notes.react.js') }} " ></script>
        {% endblock %}
    </head>
    <body>
    <div class="search-bar">
        <form method="GET" action="" class="js-sea-search sea-search">
            <input type="search" name="q" placeholder="Search Sea Creatures" autocomplete="off" class="search-input">
        </form>
    </div>
    <header class="header">
        <ul class="navi">
            {% if is_granted('ROLE_USER') and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                <li><a href="{{ path('fos_user_security_logout') }}"> Logout</a></li>
            {% else %}
                <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
            {% endif %}
        </ul>
    </header>
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
