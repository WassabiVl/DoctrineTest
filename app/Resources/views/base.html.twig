<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}" />
        <script src=" {{ asset('js/bootstrap.js') }} " ></script>
        <script src=" {{ asset('js/main.js') }} " ></script>
        <script src=" {{ asset('js/notes.react.js') }} " ></script>
        {% endblock %}
    </head>
    <body>
    {% block header %}
        <header class="header">
            <div class="navi" role="navigation">
                <div class="container">
                    <div class="navbar-header col-md-3 col-lg-2">
                        <a class="navbar-brand" href="{{ path('home') }}">
                            Symfony Demo
                        </a>

                        <button type="button" class="navbar-toggle"
                                data-toggle="collapse"
                                data-target=".navbar-collapse">
                            <span class="sr-only">{{ 'menu.toggle_nav'|trans }}</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">

                            {% block header_navigation_links %}
                               {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER')%}
                                    <li>
                                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                        <a href="{{ path('home') }}">
                                            <i class="fa fa-lock" aria-hidden="true"></i> {{ 'menu.admin'|trans }}
                                        </a>
                                    </li>
                                   <li><a href="{{ path('fos_user_security_logout') }}"> Logout</a></li>
                               {% else %}
                                   <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                                {% endif %}
                            {% endblock %}

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" id="locales">
                                    <i class="fa fa-globe" aria-hidden="true"></i>
                                    <span class="caret"></span>
                                    <span class="sr-only">{{ 'menu.choose_language'|trans }}</span>
                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
    {% endblock %}

    {#<header class="header">#}
        {#<ul class="navi">#}
            {#{% if is_granted('ROLE_USER') and is_granted("IS_AUTHENTICATED_REMEMBERED") %}#}
                {#{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}#}
                {#<li><a href="{{ path('fos_user_security_logout') }}"> Logout</a></li>#}
            {#{% else %}#}
                {#<li><a href="{{ path('fos_user_security_login') }}">Login</a></li>#}
            {#{% endif %}#}
        {#</ul>#}
    {#</header>#}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
